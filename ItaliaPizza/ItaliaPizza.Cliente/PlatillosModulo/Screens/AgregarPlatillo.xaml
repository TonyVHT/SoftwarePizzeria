<Window x:Class="ItaliaPizza.Cliente.Platillos.Screens.AgregarPlatillo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:ItaliaPizza.Cliente.Platillos.Screens"
        mc:Ignorable="d" 
        Title="Información del Platillo" Height="703" Width="800"
        WindowStartupLocation="CenterScreen">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Text="Agregar Platillo"
                       FontSize="32"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 20"
                       Foreground="#333"/>

            <!-- Formulario -->
            <GroupBox Header="Detalles del Platillo" FontSize="16" FontWeight="Bold" Foreground="#333" Grid.Row="1">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Nombre del platillo -->
                    <TextBlock Text="Nombre del platillo" Margin="5" Grid.Row="0" Grid.Column="0" Foreground="#333"/>
                    <TextBox Name="txtNombre" Margin="5" Grid.Row="0" Grid.Column="1" Height="30"/>

                    <!-- Precio -->
                    <TextBlock Text="Precio" Margin="5" Grid.Row="1" Grid.Column="0" Foreground="#333"/>
                    <TextBox Name="txtPrecio" Margin="5" Grid.Row="1" Grid.Column="1" Height="30"/>

                    <!-- Descripción -->
                    <TextBlock Text="Descripción" Margin="5" Grid.Row="2" Grid.Column="0" Foreground="#333"/>
                    <TextBox Name="txtDescripcion" Margin="5" Grid.Row="2" Grid.Column="1" Height="60" AcceptsReturn="True" TextWrapping="Wrap"/>

                    <!-- Categoría -->
                    <TextBlock Text="Categoría" Margin="5" Grid.Row="3" Grid.Column="0" Foreground="#333"/>
                    <ComboBox Name="cmbCategoria" Margin="5" Grid.Row="3" Grid.Column="1" Height="30"/>

                    <!-- Disponibilidad -->
                    <TextBlock Text="Disponibilidad del platillo" Margin="5" Grid.Row="4" Grid.Column="0" Foreground="#333"/>
                    <ComboBox Name="cmbDisponibilidad" Margin="5" Grid.Row="4" Grid.Column="1" Height="30"/>

                    <!-- Imagen -->
                    <TextBlock Text="Imagen del platillo" Margin="5" Grid.Row="5" Grid.Column="0" Foreground="#333"/>
                    <Image Grid.Row="5" Height="120" Width="120" HorizontalAlignment="Left" Margin="5" Name="imgPlatillo" Grid.Column="1"/>

                    <!-- Botón Seleccionar Imagen -->
                    <Button Grid.Row="6" Grid.ColumnSpan="2" Content="Seleccionar Imagen" Width="200" HorizontalAlignment="Center" Margin="0 10" Background="#32d483" Foreground="White" BorderThickness="0" Height="50" Click="SeleccionarImagen_Click"/>

                    <!-- Botones -->
                    <StackPanel Orientation="Horizontal" Grid.Row="7" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button Content="Guardar" Width="150" Margin="10" Background="#32d483" Foreground="White" BorderThickness="0" Height="50" Click="btnGuardar_Click"/>
                        <Button Content="Agregar Receta" Width="150" Margin="10" Background="#e0f9f0" Foreground="#333" BorderThickness="0" Height="50"/>
                        <Button Content="Cancelar" Width="150" Margin="10" Background="#f5f5f5" Foreground="#333" BorderThickness="0" Height="50" Click="btnCancelar_Click"/>
                    </StackPanel>

                </Grid>
            </GroupBox>
        </Grid>
    </ScrollViewer>
</Window>
