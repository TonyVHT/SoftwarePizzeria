<Window x:Class="ItaliaPizza.Cliente.Platillos.Screens.BuscarPlatillosScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItaliaPizza.Cliente.Platillos.Screens"
        mc:Ignorable="d"
        Title="Gestión de platillos" Height="600" Width="800" MinHeight="400" MinWidth="600">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" HorizontalAlignment="Stretch">

            <TextBlock Text="Gestión de platillos y recetas"
                       FontSize="24"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 20"
                       Foreground="#333" />

            <!-- Filtros -->
            <Grid Margin="0 0 0 20" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" Margin="5" Name="txtBuscarNombre" VerticalAlignment="Center" Height="30" />
                <ComboBox Grid.Column="1" Margin="5" Name="cmbCategoria" VerticalAlignment="Center" Height="30" />
                <Button Grid.Column="2" Content="Buscar" Margin="5" Background="#32d483" Foreground="White" BorderThickness="0" Height="30" Click="btnBuscar_Click" />
            </Grid>

            <Button Content="Agregar Platillo"
                Width="150"
                Margin="0 0 0 20"
                HorizontalAlignment="Left"
                Background="#32d483"
                Foreground="White"
                BorderThickness="0" 
                Click="AgregarPlatillo_Click"/>

            <ItemsControl Name="PlatillosLista">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#32d483" BorderThickness="1" CornerRadius="5" Margin="0 10" Background="#e0f9f0">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Imagen -->
                                <Image Width="100" Height="100" HorizontalAlignment="Left" Grid.Column="0" 
                           Source="{Binding Imagen}" />
                                <!-- Vincula la propiedad Imagen -->

                                <!-- Nombre del platillo -->
                                <TextBlock Text="{Binding Nombre}" FontSize="18" VerticalAlignment="Center" Margin="20 0" Grid.Column="1" Foreground="#333" />

                                <!-- Botones -->
                                <StackPanel Orientation="Vertical" Grid.Column="2" VerticalAlignment="Center">
                                    <Button Content="Ver" Width="70" Margin="5" Background="#32d483" Foreground="White" BorderThickness="0" Click="VerPlatillo_Click" />
                                    <Button Content="Modificar" Width="70" Margin="5" Background="#32d483" Foreground="White" BorderThickness="0" Click="ModificarPlatillo_Click" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <StackPanel x:Name="PaginacionContenedor"
                        Orientation="Vertical"
                        HorizontalAlignment="Center"
                        Margin="0 20" />
        </StackPanel>
    </ScrollViewer>
</Window>