<Window x:Class="ItaliaPizza.Cliente.Platillos.Screens.InformacionPlatillo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:ItaliaPizza.Cliente.Platillos.Screens"
        mc:Ignorable="d" 
        Title="Información del Platillo" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Text="Platillo"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 20"/>

            <!-- Formulario -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Nombre del platillo -->
                <TextBlock Text="Nombre del platillo" Margin="5" Grid.Row="0" Grid.Column="0"/>
                <TextBox Name="txtNombre" Margin="5" Grid.Row="0" Grid.Column="1"/>

                <!-- Precio -->
                <TextBlock Text="Precio" Margin="5" Grid.Row="1" Grid.Column="0"/>
                <TextBox Name="txtPrecio" Margin="5" Grid.Row="1" Grid.Column="1"/>

                <!-- Descripción -->
                <TextBlock Text="Descripción" Margin="5" Grid.Row="2" Grid.Column="0"/>
                <TextBox Name="txtDescripcion" Margin="5" Grid.Row="2" Grid.Column="1"/>

                <!-- Categoría -->
                <TextBlock Text="Categoría" Margin="5" Grid.Row="3" Grid.Column="0"/>
                <ComboBox Name="cmbCategoria" Margin="5" Grid.Row="3" Grid.Column="1"/>

                <!-- Disponibilidad -->
                <TextBlock Text="Disponibilidad del platillo" Margin="5" Grid.Row="4" Grid.Column="0"/>
                <ComboBox Name="cmbDisponibilidad" Margin="5" Grid.Row="4" Grid.Column="1"/>

                <!-- Imagen -->
                <Image Grid.Row="5" Height="100" Width="100" HorizontalAlignment="Left" Margin="175,20,0,20" Name="imgPlatillo" Grid.Column="1"/>
                <Button Grid.Row="6" Grid.ColumnSpan="2" Content="Agregar imagen" Width="150" HorizontalAlignment="Center" Margin="0 10"/>

                <!-- Botones -->
                <StackPanel Orientation="Horizontal" Grid.Row="7" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0 20 0 0">
                    <Button Content="Guardar" Width="100" Margin="10"/>
                    <Button Content="Receta" Width="100" Margin="10"/>
                    <Button Content="Cancelar" Width="100" Margin="10"/>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
