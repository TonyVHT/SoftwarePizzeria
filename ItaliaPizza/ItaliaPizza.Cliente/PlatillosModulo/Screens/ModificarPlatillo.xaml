<Window x:Class="ItaliaPizza.Cliente.Platillos.Screens.ModificarPlatillo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:ItaliaPizza.Cliente.Platillos.Screens"
        mc:Ignorable="d" 
        Title="Modificar Platillo" Height="703" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f9f9f9">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Text="Modificar Platillo"
                       FontSize="36"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 20"
                       Foreground="#32d483"/>

            <!-- Formulario -->
            <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20" BorderBrush="#32d483" BorderThickness="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Nombre del platillo -->
                    <TextBlock Text="Nombre del platillo:" Margin="10" Grid.Row="0" Grid.Column="0" Foreground="#333" FontWeight="Bold" FontSize="18"/>
                    <TextBox Name="txtNombre" Margin="10" Grid.Row="0" Grid.Column="1" Height="35" FontSize="16" Padding="5"/>

                    <!-- Precio -->
                    <TextBlock Text="Precio:" Margin="10" Grid.Row="1" Grid.Column="0" Foreground="#333" FontWeight="Bold" FontSize="18"/>
                    <TextBox Name="txtPrecio" Margin="10" Grid.Row="1" Grid.Column="1" Height="35" FontSize="16" Padding="5"/>

                    <!-- Descripción -->
                    <TextBlock Text="Descripción:" Margin="10" Grid.Row="2" Grid.Column="0" Foreground="#333" FontWeight="Bold" FontSize="18"/>
                    <TextBox Name="txtDescripcion" Margin="10" Grid.Row="2" Grid.Column="1" Height="80" FontSize="16" Padding="5" AcceptsReturn="True" TextWrapping="Wrap"/>

                    <!-- Categoría -->
                    <TextBlock Text="Categoría:" Margin="10" Grid.Row="3" Grid.Column="0" Foreground="#333" FontWeight="Bold" FontSize="18"/>
                    <ComboBox Name="cmbCategoria" Margin="10" Grid.Row="3" Grid.Column="1" Height="35" FontSize="16"/>

                    <!-- Disponibilidad -->
                    <TextBlock Text="Disponibilidad del platillo:" Margin="10" Grid.Row="4" Grid.Column="0" Foreground="#333" FontWeight="Bold" FontSize="18"/>
                    <ComboBox Name="cmbDisponibilidad" Margin="10" Grid.Row="4" Grid.Column="1" Height="35" FontSize="16"/>

                    <!-- Imagen -->
                    <TextBlock Text="Imagen del platillo:" Margin="10" Grid.Row="5" Grid.Column="0" Foreground="#333" FontWeight="Bold" FontSize="18"/>
                    <Border Grid.Row="5" Grid.Column="1" Margin="10" BorderBrush="#ddd" BorderThickness="1" CornerRadius="10">
                        <Image Name="imgPlatillo" Height="150" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
                    </Border>

                    <!-- Botón Seleccionar Imagen -->
                    <Button Grid.Row="6" Grid.ColumnSpan="2" Content="Seleccionar Imagen" Width="200" HorizontalAlignment="Center" Margin="0 20" Background="#32d483" Foreground="White" BorderThickness="0" Height="50" FontWeight="Bold" FontSize="16" Click="SeleccionarImagen_Click"/>

                    <!-- Botones -->
                    <StackPanel Orientation="Horizontal" Grid.Row="7" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,30,0,0">
                        <Button Content="Guardar Cambios" Width="180" Margin="15" Background="#32d483" Foreground="White" BorderThickness="0" Height="50" FontWeight="Bold" FontSize="16" Click="btnGuardarCambios_Click"/>
                        <Button Content="Modificar Receta" Width="180" Margin="15" Background="#e0f9f0" Foreground="#333" BorderThickness="0" Height="50" FontWeight="Bold" FontSize="16" Click="btnModificarReceta_Click"/>
                        <Button Content="Cancelar" Width="180" Margin="15" Background="#f5f5f5" Foreground="#333" BorderThickness="0" Height="50" FontWeight="Bold" FontSize="16" Click="btnCancelar_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>