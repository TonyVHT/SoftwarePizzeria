<Window x:Class="ItaliaPizza.Cliente.Platillos.Screens.PlatillosScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItaliaPizza.Cliente.Platillos.Screens"
        mc:Ignorable="d"
        Title="Gestión de platillos" Height="600" Width="800" MinHeight="400" MinWidth="600">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" HorizontalAlignment="Stretch">

            <!-- Título -->
            <TextBlock Text="Gestión de platillos y recetas"
                       FontSize="24"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 20" />

            <!-- Filtros -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 0 0 10">
                <TextBox Width="200" Margin="0 0 10 0" Name="txtBuscarNombre" />
                <ComboBox Width="200" Margin="0 0 10 0" Name="cmbCategoria" />
                <Button Content="Buscar" Width="80" />
            </StackPanel>

            <!-- Botón Agregar -->
            <Button Content="Agregar Platillo"
                    Width="150"
                    Margin="0 0 0 20"
                    HorizontalAlignment="Left" />

            <!-- Lista de platillos -->
            <ItemsControl Name="PlatillosLista">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Margin="0 10" Background="#E0F7FA">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Imagen -->
                                <Rectangle Width="100" Height="100" Fill="Gray" Grid.Column="0" />

                                <!-- Nombre del platillo -->
                                <TextBlock Text="{Binding Nombre}" FontSize="18" VerticalAlignment="Center" Margin="20 0" Grid.Column="1" />

                                <!-- Botones -->
                                <StackPanel Orientation="Vertical" Grid.Column="2" VerticalAlignment="Center">
                                    <Button Content="Ver" Width="70" Margin="5" />
                                    <Button Content="Modificar" Width="70" Margin="5" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Contenedor de paginación dinámico -->
            <StackPanel x:Name="PaginacionContenedor"
                        Orientation="Vertical"
                        HorizontalAlignment="Center"
                        Margin="0 20" />
        </StackPanel>
    </ScrollViewer>
</Window>

