<Window x:Class="ItaliaPizza.Cliente.Platillos.Screens.VerPlatillo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:ItaliaPizza.Cliente.Platillos.Screens"
        mc:Ignorable="d" 
        Title="Ver Platillo" Height="703" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f9f9f9">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Text="Información del Platillo"
                       FontSize="36"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 20"
                       Foreground="#32d483"/>

            <!-- Formulario -->
            <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20" BorderBrush="#32d483" BorderThickness="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Nombre del platillo -->
                    <TextBlock Text="Nombre del platillo:" Margin="10" Grid.Row="0" Grid.Column="0" Foreground="#333" FontWeight="Bold" FontSize="18"/>
                    <TextBlock Name="txtNombre" Margin="10" Grid.Row="0" Grid.Column="1" FontWeight="Bold" FontSize="20" Foreground="#555"/>

                    <!-- Imagen -->
                    <TextBlock Text="Imagen del platillo:" Margin="10" Grid.Row="1" Grid.Column="0" Foreground="#333" FontWeight="Bold" FontSize="18"/>
                    <Border Grid.Row="1" Grid.Column="1" Margin="10" BorderBrush="#ddd" BorderThickness="1" CornerRadius="10">
                        <Image Name="imgPlatillo" Height="200" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
                    </Border>

                    <!-- Descripción -->
                    <TextBlock Text="Descripción:" Margin="10" Grid.Row="2" Grid.Column="0" Foreground="#333" FontWeight="Bold" FontSize="18"/>
                    <TextBlock Name="txtDescripcion" Margin="10" Grid.Row="2" Grid.Column="1" TextWrapping="Wrap" Foreground="#555" FontSize="16"/>

                    <!-- Precio -->
                    <TextBlock Text="Precio:" Margin="10" Grid.Row="3" Grid.Column="0" Foreground="#333" FontWeight="Bold" FontSize="18"/>
                    <TextBlock Name="txtPrecio" Margin="10" Grid.Row="3" Grid.Column="1" Foreground="#555" FontSize="16"/>

                    <!-- Categoría -->
                    <TextBlock Text="Categoría:" Margin="10" Grid.Row="4" Grid.Column="0" Foreground="#333" FontWeight="Bold" FontSize="18"/>
                    <TextBlock Name="txtCategoria" Margin="10" Grid.Row="4" Grid.Column="1" Foreground="#555" FontSize="16"/>

                    <!-- Botones -->
                    <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,30,0,0">
                        <Button Content="Modificar" Width="180" Margin="15" Background="#32d483" Foreground="White" BorderThickness="0" Height="50" Click="Modificar_Click" FontWeight="Bold" FontSize="16"/>
                        <Button Content="Salir" Width="180" Margin="15" Background="#f5f5f5" Foreground="#333" BorderThickness="0" Height="50" Click="Salir_Click" FontWeight="Bold" FontSize="16"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>