<Window x:Class="ItaliaPizza.Cliente.Screens.Admin.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItaliaPizza.Cliente.Screens.Admin"
        xmlns:controls="clr-namespace:ItaliaPizza.Cliente.UserControls"
        mc:Ignorable="d"
        Title="AddUser" Height="450" Width="800">
    <Grid>

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#E6F4EA" Offset="0"/>
                <GradientStop Color="#F0F4F8" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="127*"/>
                <ColumnDefinition Width="673*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="12*"/>
                    <RowDefinition Height="200*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="18*"/>
                    <ColumnDefinition Width="71*"/>
                    <ColumnDefinition Width="584*"/>
                </Grid.ColumnDefinitions>
                <Button Name="btnCancelar" Content="Cancelar" Style="{StaticResource cancelbuttonsStyle}" Margin="0,0,02,0"  Grid.Column="1" Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"></Button>



            </Grid>
            <Grid Grid.Column="0">
                <controls:UCAdmin></controls:UCAdmin>
            </Grid>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Column="1" Margin="0,20,0,0">
                <StackPanel Margin="20" Grid.Row="1" Grid.Column="1">
                    

                    <!-- Información personal -->
                    <Expander Header="Información personal" Margin="0 0 0 20" IsExpanded="True">
                        <StackPanel Margin="10">
                            <Label Content="Nombre(s):"/>
                            <TextBox Style="{StaticResource textboxStyle}" x:Name="txtNombre" />

                            <Label Content="Apellidos:"/>
                            <TextBox x:Name="txtApellidos" Style="{StaticResource textboxStyle}" />

                            <Label Content="CURP:"/>
                            <TextBox x:Name="txtCurp" Style="{StaticResource textboxStyle}"/>

                            <Label Content="Nombre de usuario:"/>
                            <TextBox x:Name="txtNombreUsuario" Style="{StaticResource textboxStyle}" />

                            <Label Content="Contraseña:"/>
                            <PasswordBox x:Name="pswContra" Style="{StaticResource passwordboxStyle}" />

                            <Label Content="Tipo de usuario:"/>
                            <ComboBox x:Name="cmbTipoUsuario" Style="{StaticResource comboBoxStyle}" MaxDropDownHeight="150" Margin="0 0 0 20">
                                <ComboBoxItem Content="Mesero"/>
                                <ComboBoxItem Content="Administrador"/>
                                <ComboBoxItem Content="Cocinero"/>
                                <ComboBoxItem Content="Gerente"/>
                                <ComboBoxItem Content="Cajero"/>
                                <ComboBoxItem Content="Repartidor"/>
                            </ComboBox>
                        </StackPanel>
                    </Expander>

                    <!-- Dirección -->
                    <Expander Header="Dirección" Margin="0 0 0 10">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Label Content="Calle:" Grid.Row="0" Grid.Column="0"/>
                            <TextBox x:Name="txtCalle" Grid.Row="0" Grid.Column="0" Margin="60,0,0,0" Style="{StaticResource textboxStyle}" />

                            <Label Content="Número:" Grid.Row="0" Grid.Column="1"/>
                            <TextBox x:Name="txtNumero" Grid.Row="0" Grid.Column="1" Margin="60,0,0,0" Style="{StaticResource textboxStyle}" />

                            <Label Content="C.P.:" Grid.Row="0" Grid.Column="2"/>
                            <TextBox x:Name="txtCodigoPostal" Grid.Row="0" Grid.Column="2" Margin="40,0,0,0" Style="{StaticResource textboxStyle}" />

                            <Label Content="Ciudad:" Grid.Row="1" Grid.Column="0"/>
                            <TextBox x:Name="txtCiudad" Grid.Row="1" Grid.Column="0" Margin="60,0,0,0" Style="{StaticResource textboxStyle}"/>
                        </Grid>
                    </Expander>

                    <!-- Contacto -->
                    <Expander Header="Contacto" Margin="0 0 0 10">
                        <StackPanel Margin="10">
                            <Label Content="Teléfono:"/>
                            <TextBox x:Name="txtTelefono" Style="{StaticResource textboxStyle}"/>

                            <Label Content="Email:"/>
                            <TextBox x:Name="txtEmail" Style="{StaticResource textboxStyle}"/>
                        </StackPanel>
                    </Expander>

                    <!-- Botón registrar -->
                    <Button Content="Registrar"
                            HorizontalAlignment="Right"
                            Width="100"
                            Margin="0 10 0 0"
                            Click="BtnRegistrar_Click"
                            Style="{StaticResource buttonsStyle}"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
