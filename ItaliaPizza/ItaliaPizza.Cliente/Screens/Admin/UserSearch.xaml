<Window x:Class="ItaliaPizza.Cliente.Screens.Admin.UserSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItaliaPizza.Cliente.Screens.Admin"
        xmlns:controls="clr-namespace:ItaliaPizza.Cliente.UserControls"
        mc:Ignorable="d"
        Title="UserSearch" Height="450" Width="800">
    <Grid>
        <Grid>
            <controls:UCAdmin></controls:UCAdmin>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="133*"/>
                <ColumnDefinition Width="667*"/>
            </Grid.ColumnDefinitions>

            <Grid Margin="20" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Filtros de búsqueda -->
                <StackPanel Orientation="Horizontal"  Grid.Row="0" Margin="0 0 0 10">
                    <TextBox x:Name="txtNombre" Width="180" 
             />
                    <TextBox x:Name="txtNombreUsuario" Width="180" 
             />
                    <ComboBox x:Name="cmbRol" Width="150">
                        <ComboBoxItem Content=""/>
                        <ComboBoxItem Content="Administrador"/>
                        <ComboBoxItem Content="Mesero"/>
                        <ComboBoxItem Content="Cocinero"/>
                        <ComboBoxItem Content="Gerente"/>
                        <ComboBoxItem Content="Cajero"/>
                    </ComboBox>
                    <Button Content="Buscar"
            Width="100"
            Click="BtnBuscar_Click"
            Style="{StaticResource buttonsStyle}" />
                </StackPanel>

                <!-- Tabla de resultados -->
                <DataGrid x:Name="dgUsuarios" Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  MouseDoubleClick="dgUsuarios_MouseDoubleClick"
                  HeadersVisibility="Column"
                  RowHeaderWidth="0">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Usuario" Binding="{Binding NombreUsuario}" Width="*"/>
                        <DataGridTextColumn Header="Nombre completo" Binding="{Binding NombreCompleto}" Width="*"/>
                        <DataGridTextColumn Header="Rol" Binding="{Binding Rol}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

        </Grid>


    </Grid>
</Window>
