<Window x:Class="ItaliaPizza.Cliente.Screens.Cashier.AddAddress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItaliaPizza.Cliente.Screens.Cashier"
        xmlns:controls="clr-namespace:ItaliaPizza.Cliente.UserControls"
        mc:Ignorable="d"
        Title="Añadir Nueva Dirección" Height="650" Width="950"
        FocusManager.FocusedElement="{Binding ElementName=txtDireccion}"> <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ContentControl x:Name="MenuLateral" Grid.Column="0"/>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>     <RowDefinition Height="*"/>       <RowDefinition Height="Auto"/>     </Grid.RowDefinitions>

            <Button Content="Cancelar" Click="BtnCancelar_Click"
                    Width="100" Height="30" Margin="10"
                    HorizontalAlignment="Left" VerticalAlignment="Top"
                    Grid.Row="0" Style="{StaticResource buttonsStyle}"/>

            <Border Grid.Row="1" Background="White" CornerRadius="15" Padding="20" Margin="20,10,20,10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Nueva Dirección" FontSize="20" FontWeight="Bold" Foreground="#199D54" Margin="0,0,0,20"/>

                        <Label Content="Dirección:"/>
                        <TextBox x:Name="txtDireccion" Height="30" Style="{StaticResource textboxStyle}"
                                 Text="{Binding Direccion, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True, NotifyOnValidationError=True}"/>
                        <TextBlock Foreground="Red" Margin="0,2,0,5" FontSize="11"
                                   Text="{Binding Path=(Validation.Errors)/ErrorContent, ElementName=txtDireccion}"/>

                        <Label Content="Código Postal:"/>
                        <TextBox x:Name="txtCodigoPostal" Height="30" Style="{StaticResource textboxStyle}"
                                 Text="{Binding CodigoPostal, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True, NotifyOnValidationError=True}"/>
                        <TextBlock Foreground="Red" Margin="0,2,0,5" FontSize="11"
                                   Text="{Binding Path=(Validation.Errors)/ErrorContent, ElementName=txtCodigoPostal}"/>

                        <Label Content="Ciudad:"/>
                        <TextBox x:Name="txtCiudad" Height="30" Style="{StaticResource textboxStyle}"
                                 Text="{Binding Ciudad, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True, NotifyOnValidationError=True}"/>
                        <TextBlock Foreground="Red" Margin="0,2,0,5" FontSize="11"
                                   Text="{Binding Path=(Validation.Errors)/ErrorContent, ElementName=txtCiudad}"/>

                        <Label Content="Referencias:"/>
                        <TextBox x:Name="txtReferencias" Height="30" Style="{StaticResource textboxStyle}"
                                 Text="{Binding Referencias, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True, NotifyOnValidationError=True}"/>
                        <TextBlock Foreground="Red" Margin="0,2,0,5" FontSize="11"
                                   Text="{Binding Path=(Validation.Errors)/ErrorContent, ElementName=txtReferencias}"/>
                        
                        <CheckBox x:Name="chkEsPrincipal" Content="¿Es dirección principal?" Margin="0,15,0,0"
                                  IsChecked="{Binding EsPrincipal}"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <Button Content="Guardar" Grid.Row="2" Click="BtnGuardar_Click"
                    Width="120" Height="40" Margin="0,10,20,10"
                    HorizontalAlignment="Right" VerticalAlignment="Center"
                    Style="{StaticResource buttonsStyle}">
                </Button>
        </Grid>
    </Grid>
</Window>