<Window x:Class="ItaliaPizza.Cliente.Screens.Cashier.ClientSearcher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItaliaPizza.Cliente.Screens.Cashier"
        xmlns:controls="clr-namespace:ItaliaPizza.Cliente.UserControls"
        mc:Ignorable="d"
        Title="ClientSearcher" Height="600" Width="950"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <Grid>
        <Grid>
            <controls:UCCashier />
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="33*" />
                <ColumnDefinition Width="167*" />
            </Grid.ColumnDefinitions>

            <Grid Margin="20" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Filtro -->
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                    <Grid Width="250">
                        <TextBox x:Name="txtBusquedaCliente" Width="250" />
                        <TextBlock Text="Buscar cliente por nombre"
                                   Foreground="Gray"
                                   IsHitTestVisible="False"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding Text.IsEmpty, ElementName=txtBusquedaCliente, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </Grid>

                    <Button x:Name="btnBuscarCliente" Content="Buscar" Width="100" Margin="10,0,0,0"
                            Click="BtnBuscarCliente_Click" Style="{StaticResource buttonsStyle}" />
                </StackPanel>

                <!-- Contenedor de resultados -->
                <Grid Grid.Row="1">
                    <!-- Loading -->
                    <TextBlock x:Name="txtLoadingCliente" Text="Buscando..."
                               Visibility="Collapsed"
                               FontSize="18"
                               Foreground="Gray"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />

                    <!-- No resultados -->
                    <TextBlock x:Name="txtNoResultadosCliente" Text="No se encontraron clientes"
                               Visibility="Collapsed"
                               FontSize="16"
                               Foreground="Gray"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />

                    <!-- DataGrid -->
                    <DataGrid x:Name="dgClientes" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single"
                              Visibility="Visible">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Nombre completo" Binding="{Binding NombreCompleto}" Width="*"/>
                            <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="*"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
