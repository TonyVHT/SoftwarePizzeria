<Window x:Class="ItaliaPizza.Cliente.Screens.ConsultOrdersProvider"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItaliaPizza.Cliente.Screens"
        xmlns:converters="clr-namespace:ItaliaPizza.Cliente.Utils"
        mc:Ignorable="d"
        Title="ConsultOrdersProvider" Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#f4f6f8">

    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="800" Margin="0,20">

                <!-- Título -->
                <TextBlock Text="Historial de Pedidos" FontSize="28" FontWeight="Bold" Foreground="#2c3e50" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <!-- Cuadro de texto para nombre del proveedor -->
                <Grid Width="300" Height="30" Margin="0,0,0,20" HorizontalAlignment="Left">
                    <TextBox x:Name="txtProveedor"
                             VerticalContentAlignment="Center"
                             Padding="5"
                             Width="300"
                             Height="30"/>
                </Grid>

                <!-- Lista de pedidos -->
                <ListView x:Name="lvPedidos" Height="300" Width="800" MouseDoubleClick="lvPedidos_MouseDoubleClick">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Fecha de Pedido" Width="150" DisplayMemberBinding="{Binding FechaPedido}" />
                            <GridViewColumn Header="Producto" Width="200" DisplayMemberBinding="{Binding Producto}" />
                            <GridViewColumn Header="Cantidad" Width="100" DisplayMemberBinding="{Binding Cantidad}" />
                            <GridViewColumn Header="Total" Width="100" DisplayMemberBinding="{Binding Total}" />
                            <GridViewColumn Header="Estado de Entrega" Width="200" DisplayMemberBinding="{Binding EstadoEntrega}" />
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- Botones -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Agregar Pedido" Width="150" Height="35" Margin="5"
                            Background="#3498db" Foreground="White" FontWeight="Bold"
                            Click="BtnAgregarPedido_Click"/>

                    <Button Content="Cerrar" Width="100" Height="35" Margin="5"
                            Background="#e74c3c" Foreground="White" FontWeight="Bold"
                            Click="BtnCerrar_Click"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
