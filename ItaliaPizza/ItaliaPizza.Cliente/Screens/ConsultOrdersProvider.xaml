<Window x:Class="ItaliaPizza.Cliente.Screens.ConsultOrdersProvider"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ItaliaPizza.Cliente.Screens"
        xmlns:converters="clr-namespace:ItaliaPizza.Cliente.Utils"
        Title="Pedidos al Proveedor"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <ResourceDictionary>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="1" CornerRadius="20" Padding="30" Style="{StaticResource RoosterClubBorderStyle}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">

                        <!-- Título -->
                        <TextBlock Text="Pedidos realizados al proveedor"
                                   FontSize="36"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="0,0,0,20"
                                   HorizontalAlignment="Center"
                                   FontFamily="Segoe UI"/>

                        <!-- Lista de pedidos -->
                        <ListView x:Name="lvPedidos"
                                  Height="400"
                                  Width="1100"
                                  Margin="0,0,0,20"
                                  MouseDoubleClick="lvPedidos_MouseDoubleClick"
                                  Background="Transparent"
                                  BorderThickness="0"
                                  HorizontalContentAlignment="Stretch">

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#CCCCCC"
                                            BorderThickness="1"
                                            Padding="10"
                                            Margin="5"
                                            CornerRadius="10"
                                            Background="White">

                                        <StackPanel>
                                            <TextBlock FontWeight="Bold" FontSize="16"
                                                       Text="{Binding FechaPedido, StringFormat='Fecha: {0:dd/MM/yyyy HH:mm}'}"/>
                                            <TextBlock Text="{Binding UsuarioSolicita, StringFormat='Solicitado por: {0}'}" Margin="0,2,0,0"/>
                                            <TextBlock Text="{Binding ProveedorNombre, StringFormat='Proveedor: {0}'}" Margin="0,2,0,5"/>

                                            <TextBlock Text="Productos:" FontWeight="Bold" Margin="0,5,0,2"/>
                                            <ItemsControl ItemsSource="{Binding Productos}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <DockPanel Margin="5,2">
                                                            <TextBlock Text="{Binding Nombre}" Width="200"/>
                                                            <TextBlock Text="{Binding Cantidad, StringFormat='Cantidad: {0}'}" Width="150"/>
                                                            <TextBlock Text="{Binding Total, StringFormat='Total: ${0:F2}'}" Width="150"/>
                                                        </DockPanel>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>

                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- Botones -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,0">
                            <Button Content="Agregar Pedido" Width="180" Height="35" Margin="10"
                                    Background="#27ae60" Foreground="White" FontWeight="Bold" Cursor="Hand"
                                    Click="BtnAgregarPedido_Click"/>
                            <Button Content="Cerrar" Width="120" Height="35" Margin="10"
                                    Background="#e74c3c" Foreground="White" FontWeight="Bold" Cursor="Hand"
                                    Click="BtnCerrar_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
