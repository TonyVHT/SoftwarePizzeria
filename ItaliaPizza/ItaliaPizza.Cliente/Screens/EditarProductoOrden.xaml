<Window x:Class="ItaliaPizza.Cliente.Screens.EditarProductoOrden"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ItaliaPizza.Cliente.Screens"
        Title="Editar Producto"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Width="600"
        Height="500"
        Background="Transparent">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>


    <Grid>
        <Grid Background="Transparent">
            <Border CornerRadius="20" Padding="30" Style="{StaticResource RoosterClubBorderStyle}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="450">

                    <TextBlock Text="Editar Producto"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,20"
                               HorizontalAlignment="Center"
                               FontFamily="Segoe UI"/>

                    <TextBlock Text="Nombre:" Foreground="White" FontWeight="Bold" />
                    <TextBox Text="{Binding Nombre}" Margin="0,5,0,15" IsEnabled="False" />

                    <TextBlock Name="txtCantidad" Text="Cantidad:" Foreground="White" FontWeight="Bold" />
                    <TextBox Name="textboxCantidad" Text="{Binding Cantidad}" Margin="0,5,0,20" TextChanged="CantidadTextBox_TextChanged" />

                    <TextBlock Name="txtTotal" Text="Total:" Foreground="White" FontWeight="Bold"/>
                    <TextBox Name="textboxTotal" Text="{Binding Total}" IsReadOnly="True"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Guardar"
                                Width="100" Height="35"
                                Margin="0,0,10,0"
                                Background="#27ae60"
                                Foreground="White"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Click="Guardar_Click"/>

                        <Button Content="Eliminar"
                                Width="100" Height="35"
                                Margin="0,0,10,0"
                                Background="#c0392b"
                                Foreground="White"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Click="Eliminar_Click"/>

                        <Button Content="Cancelar"
                                Width="100" Height="35"
                                Background="#7f8c8d"
                                Foreground="White"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Click="Cancelar_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
