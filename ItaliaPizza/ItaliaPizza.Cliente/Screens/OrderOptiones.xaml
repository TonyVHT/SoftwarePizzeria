<Window x:Class="ItaliaPizza.Cliente.Screens.OrderOptiones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItaliaPizza.Cliente.Screens"
        mc:Ignorable="d"
        Title="OrderOptiones" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#E6F4EA" Offset="0"/>
                <GradientStop Color="#F0F4F8" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ContentControl x:Name="MenuLateral" Grid.Column="0"/>
            <Grid Grid.Column="1">
                <StackPanel x:Name="PanelBotones" Orientation="Vertical" Margin="20" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                    <TextBlock Text="Opciones" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center" Foreground="#333"/>
                    <Border BorderBrush="#4CAF50" BorderThickness="2" CornerRadius="10" Margin="10" Padding="10" HorizontalAlignment="Stretch">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="10" Direction="270" ShadowDepth="5"/>
                        </Border.Effect>
                        <!-- Botones distribuidos en un WrapPanel -->
                        <WrapPanel x:Name="BotonesWrapPanel" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top" ItemWidth="250" ItemHeight="70" Margin="15">
                            <!-- Aquí los botones se agregarán dinámicamente -->
                        </WrapPanel>

                    </Border>

                </StackPanel>
            </Grid>
        </Grid>

    </Grid>
</Window>
