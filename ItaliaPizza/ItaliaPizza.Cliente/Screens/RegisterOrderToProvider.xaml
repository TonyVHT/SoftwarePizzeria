<Window x:Class="ItaliaPizza.Cliente.Screens.RegisterOrderToProvider"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Pedido a Proveedor"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/estilos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Contenedor central con estilo -->
        <Border Grid.Column="1" CornerRadius="20" Padding="30" Style="{StaticResource RoosterClubBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Título -->
                <TextBlock Text="Registrar Pedido a Proveedor"
                           FontSize="36"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Cuerpo -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Formulario -->
                    <StackPanel Grid.Column="0" Margin="10,0,20,0" VerticalAlignment="Top">
                        <TextBlock Text="Proveedor:" FontWeight="Bold" Margin="0,0,0,5" Foreground="White"/>
                        <ComboBox x:Name="cmbProveedor" IsEnabled="False" Height="30" Margin="0,0,0,10" Style="{StaticResource ComboBoxEstilo}"/>

                        <TextBlock Text="Producto:" FontWeight="Bold" Margin="0,0,0,5" Foreground="White"/>
                        <ComboBox x:Name="cmbProducto" Height="30" Margin="0,0,0,10" Style="{StaticResource ComboBoxEstilo}"/>

                        <TextBlock Text="Cantidad:" FontWeight="Bold" Margin="0,0,0,5" Foreground="White"/>
                        <TextBox x:Name="txtCantidad" Height="30" Margin="0,0,0,10" Style="{StaticResource LoginTextBoxStyle}"/>

                        <TextBlock Text="Total a pagar:" FontWeight="Bold" Margin="0,0,0,5" Foreground="White"/>
                        <TextBox x:Name="txtTotal" Height="30" Margin="0,0,0,10" Style="{StaticResource LoginTextBoxStyle}"/>

                        <Button Content="Agregar al carrito"
                                Background="#3498db"
                                Foreground="White"
                                FontWeight="Bold"
                                Margin="0,10,0,0"
                                Height="35"
                                Click="BtnAgregarAlCarrito_Click"/>
                    </StackPanel>

                    <Border CornerRadius="10" BorderThickness="1" BorderBrush="LightGray" Background="White" Grid.Column="1">
                        <ListView x:Name="lvCarrito" Margin="0" MouseDoubleClick="LvCarrito_MouseDoubleClick">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Producto" DisplayMemberBinding="{Binding Nombre}" Width="200"/>
                                    <GridViewColumn Header="Cantidad" DisplayMemberBinding="{Binding Cantidad}" Width="100"/>
                                    <GridViewColumn Header="Total" DisplayMemberBinding="{Binding Total}" Width="100"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Border>
                </Grid>

                <!-- Botones inferiores -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" Grid.Row="2">
                    <Button Content="Terminar Orden" Width="150" Height="35" Margin="10"
                            Background="#27ae60" Foreground="White" FontWeight="Bold"
                            Click="BtnTerminarOrden_Click"/>
                    <Button Content="Cancelar" Width="120" Height="35" Margin="10"
                            Background="#e74c3c" Foreground="White" FontWeight="Bold"
                            Click="BtnCancelar_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
