<Window x:Class="ItaliaPizza.Cliente.Screens.Waiter.HomePageWaiter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItaliaPizza.Cliente.Screens.Waiter"
        xmlns:controls="clr-namespace:ItaliaPizza.Cliente.UserControls"
        mc:Ignorable="d"
        Title="HomePageWaiter" Height="450" Width="800">
    <Grid>

        <Grid>
            <controls:UCWaiter></controls:UCWaiter>

        </Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="27*"/>
                <RowDefinition Height="375*"/>
                <RowDefinition Height="32*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="128*"/>
                <ColumnDefinition Width="100*"/>
                <ColumnDefinition Width="436*"/>
                <ColumnDefinition Width="100*"/>
            </Grid.ColumnDefinitions>

            <Image Source="/Resources/Images/logoHomePage.png" Grid.Column="2" Margin="0,27,0,0" Grid.Row="1">
                <Image.Effect>
                    <BlurEffect Radius="5"/>
                </Image.Effect>
            </Image>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="228*"/>
                <ColumnDefinition Width="339*"/>
                <ColumnDefinition Width="100*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="86*"/>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="98*"/>
            </Grid.RowDefinitions>

            <Viewbox Grid.Column="1" Margin="0,172,0,0" Grid.RowSpan="2" >
                <Grid>
                    <TextBlock Background="Transparent" FontWeight="Bold" >
                 Bienvenido(a):
                 <LineBreak/>
                    </TextBlock>
                    <Label x:Name="labelUser">


                    </Label>

                </Grid>

            </Viewbox>



        </Grid>

    </Grid>
</Window>
