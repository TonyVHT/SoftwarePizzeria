<UserControl x:Class="ItaliaPizza.Cliente.UserControls.ViewWasteReasonModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#CCFFFFFF" Width="350" Height="200">

    <Border Background="White" CornerRadius="10" Padding="20" BorderBrush="Gray" BorderThickness="1">
        <StackPanel>
            <TextBlock Text="Motivo de la merma" FontWeight="Bold" FontSize="16" Margin="0 0 0 10"/>
            <TextBlock x:Name="TxtMotivo" TextWrapping="Wrap" Margin="0 5"/>
            <Button Content="Cerrar" Click="BtnCerrar_Click" Width="100" HorizontalAlignment="Right" Margin="0 10 0 0"/>
        </StackPanel>
    </Border>
</UserControl>
